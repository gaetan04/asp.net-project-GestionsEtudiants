@model GestionEtudiants.Models.Student
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}
<h1>Update Student</h1>

<form action="Update" method="post">
    <div class="form-group">
        <label asp-for="SurName" class="control-label">Surname</label>
        <input name="SurName" class="form-control" value="@Model.SurName" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">First Name</label>
        <input name="FirstName" class="form-control" value="@Model.FirstName"/>
    </div>
    <div class="form-group">
        <label asp-for="Filiere" class="control-label">Filiere</label>
        <input name="FiliereId" class="form-control" value="@Model.Filiere" />
    </div>
    <div class="form-group">
        <label asp-for="Sexe" class="control-label">Sexe</label>
        <input name="Sexe" class="form-control" value="@Model.Sexe" />
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
