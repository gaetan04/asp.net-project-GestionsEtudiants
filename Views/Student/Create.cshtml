@model GestionEtudiants.Models.Student

@{
    ViewData["Title"] = "Create";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Create Student</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="CreateStudent">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SurName" class="control-label">SurName</label>
                <input type="text" name="SurName" class="form-control" />
                <span asp-validation-for="SurName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">FirstName</label>
                <input type="text" name="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Filiere" class="control-label">Filière</label>
                <input type="text" name="FiliereId" class="form-control" />
                <span asp-validation-for="Filiere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sexe" class="control-label">Sexe</label>
                <input type="text" name="Sexe" class="form-control" />
                <span asp-validation-for="Sexe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="CreateStudent" class="btn btn-primary"/> <a asp-action="" href="students" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>

